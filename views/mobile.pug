extends layout

block content
  h1= title
  - var result=results
  div(class="container-fluid")
   div(class="row")
    - var i=0
    each form in result
     
     div(class="col-sm-2",,onclick=`buy(${i})`) company: #{form.mobilecompany} - model: #{form.model} - prize: #{form.prize}
     -i=i+1
  script.
   function buy(a){
    alert(`purchased item ${a+1}`)        
   }